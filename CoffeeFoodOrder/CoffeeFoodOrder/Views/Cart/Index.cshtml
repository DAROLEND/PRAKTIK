@model List<CoffeeFoodOrder.Models.CartItem>

<h2>🛒 Кошик</h2>
@if (!Model.Any())
{
    <p>Кошик порожній</p>
}
else
{
    <table class="table">
        <tr>
            <th>Назва</th>
            <th>Кількість</th>
            <th>Ціна</th>
            <th>Сума</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Product.Price грн</td>
                <td>@(item.Product.Price * item.Quantity) грн</td>
                <td>
                    @Html.ActionLink("Видалити", "Remove", new { id = item.Product.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>

    <p><strong>Разом:</strong> @Model.Sum(x => x.Product.Price * x.Quantity) грн</p>

    <a href="@Url.Action("Checkout", "Order")" class="btn btn-success">Оформити замовлення</a>
    <a href="@Url.Action("Clear", "Cart")" class="btn btn-warning">Очистити кошик</a>
}
